{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    ":disableRateLimiting",
    ":separateMajorReleases",
    ":automergeBranch",
    ":enableVulnerabilityAlertsWithLabel",
    ":timezone(Europe/London)",
    "github>fma965/f9-homelab//.github/renovate/labels.json5",
    "github>fma965/f9-homelab//.github/renovate/semanticCommits.json5",
    "github>fma965/f9-homelab//.github/renovate/meta.json5",
    "github>fma965/f9-homelab//.github/renovate/packageRules.json5",
  ],
  flux: {
    fileMatch: ["kubernetes/clusters/.+\\.ya?ml$"]
  },
  "helm-values": {
    fileMatch: ["kubernetes/clusters/.+\\.ya?ml$","kubernetes/apps/.+\\.ya?ml$","kubernetes/infrastructure/.+\\.ya?ml$"]
  },
  kubernetes: {
    fileMatch: ["kubernetes/clusters/.+\\.ya?ml$","kubernetes/apps/.+\\.ya?ml$","kubernetes/infrastructure/.+\\.ya?ml$"]
  },
  regexManagers: [
    {
      "description": "Match Helm values for non-standard yamls",
      "fileMatch": "kubernetes/infrastructure/.+\\.ya?ml$",
      "matchStringsStrategy": "any",
      "matchStrings": [
        "repository:\\s?\"?(?<depName>[^\\s\"]*)\"?\\s*?tag:\\s?\"?(?<currentValue>[^\\s\"]*)\"?"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "description": "Match Helm Releases for helm charts",
      "fileMatch": ["kubernetes/apps/.+\\.ya?ml$","kubernetes/infrastructure/.+\\.ya?ml$"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "chart:\\s?\"?(?<depName>[^\\s\"]*)\"?\\s*?version:\\s?\"?(?<currentValue>[^\\s\"]*)\"?"
      ],
      "datasourceTemplate": "helm"
    }
  ],
  dependencyDashboardTitle: "Renovate Dashboard ðŸ¤–",
  suppressNotifications: ["prEditedNotification", "prIgnoreNotification"],
  // schedule: [
  //   'after 3am and before 6am',
  // ],  
  vulnerabilityAlerts: {
    "labels": ['security'],
    "automerge": true,
  },
  fetchChangeLogs: "pr",
  prBodyTemplate: "{{{table}}}{{{notes}}}{{{changelogs}}}{{{controls}}}",
}